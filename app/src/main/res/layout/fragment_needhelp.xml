<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.NeedHelp.NeedHelpFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Need help with anything?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="Call us"
            android:textAllCaps="false"
            android:id="@+id/call"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="Mail us"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:id="@+id/mail"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#c0c0c0"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"/>

    <Button
        android:layout_width="match_parent"
        android:drawablePadding="10dp"
        android:id="@+id/faq"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:drawableLeft="@drawable/ic_help_outline_black_24dp"
        android:text="Frequently asked questions"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <View
        android:background="#c0c0c0"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"/>

    <Button
        android:layout_width="match_parent"
        android:drawablePadding="10dp"
        android:id="@+id/terms"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:drawableLeft="@drawable/ic_filter_none_black_24dp"
        android:text="@string/terms"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <View
        android:background="#c0c0c0"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"/>

    <Button
        android:layout_width="match_parent"
        android:drawablePadding="10dp"
        android:id="@+id/privacy"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:drawableLeft="@drawable/ic_security_black_24dp"
        android:text="Privacy policy"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

</LinearLayout>